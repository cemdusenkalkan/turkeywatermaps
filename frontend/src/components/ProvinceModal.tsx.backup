import { motion, AnimatePresence } from 'motion/react'
import { useLanguage } from '../contexts/LanguageContext'
import type { ProvinceDetailData } from '@/types'
import { formatOrdinal, getWRIRiskLabel, getWRIRiskColor } from '@/lib/calculations'

interface ProvinceModalProps {
  isOpen: boolean
  data: ProvinceDetailData | null
  onClose: () => void
  totalProvinces?: number // Total count for rank display
}

export function ProvinceModal({ isOpen, data, onClose, totalProvinces = 81 }: ProvinceModalProps) {
  const { t, language } = useLanguage()

  if (!data) return null

  // Calculate rank from percentile (higher score = higher rank number)
  const combinedRank = Math.round((100 - data.combinedPercentile) / 100 * totalProvinces) || 1
  const combinedRiskLabel = getWRIRiskLabel(data.combinedScore)
  const combinedRiskColor = getWRIRiskColor(data.combinedScore)

  return (
    <AnimatePresence>
      {isOpen && (
        <>
          {/* Backdrop */}
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            onClick={onClose}
            className="fixed inset-0 bg-black/50 z-40"
          />

          {/* Modal */}
          <motion.div
            initial={{ opacity: 0, scale: 0.95, y: 20 }}
            animate={{ opacity: 1, scale: 1, y: 0 }}
            exit={{ opacity: 0, scale: 0.95, y: 20 }}
            transition={{ type: 'spring', damping: 25, stiffness: 300 }}
            className="fixed inset-0 z-50 flex items-center justify-center px-4 pointer-events-none"
          >
            <div className="bg-white dark:bg-gray-900 rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto pointer-events-auto">
              {/* Header */}
              <div className="sticky top-0 bg-gradient-to-r from-navy-800 to-navy-700 dark:from-gray-800 dark:to-gray-900 text-white p-6 flex items-start justify-between">
                <div>
                  <h2 className="text-2xl md:text-3xl font-bold">{data.provinceName}</h2>
                  {language === 'en' && data.provinceNameTr && (
                    <p className="text-gray-300 text-sm mt-1">{data.provinceNameTr}</p>
                  )}
                </div>
                <button
                  onClick={onClose}
                  className="p-2 hover:bg-white/20 rounded-lg transition-colors flex-shrink-0"
                  aria-label="Close modal"
                >
                  <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>

              {/* Content */}
              <div className="p-6 md:p-8 space-y-8">
                {/* Combined Risk Score */}
                <div className="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 p-6 rounded-xl border border-blue-200 dark:border-gray-700">
                  <div className="flex items-start justify-between mb-4">
                    <div>
                      <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                        {t('modal.combinedIndex')}
                      </h3>
                      <div className="flex items-center gap-2">
                        <div
                          className="px-2.5 py-0.5 rounded-full text-xs font-semibold text-white"
                          style={{ backgroundColor: combinedRiskColor }}
                        >
                          {combinedRiskLabel}
                        </div>
                        <span className="text-xs text-gray-600 dark:text-gray-400">
                          WRI Scale: 0-5
                        </span>
                      </div>
                    </div>
                    <div className="text-right">
                      <span className="text-4xl font-bold text-accent block">
                        {data.combinedScore.toFixed(2)}
                      </span>
                      <span className="text-xs text-gray-500 dark:text-gray-400">
                        / 5.0
                      </span>
                    </div>
                  </div>
                  <div className="flex items-center justify-between text-sm pt-3 border-t border-blue-200 dark:border-gray-700">
                    <div className="text-gray-600 dark:text-gray-400">
                      <span className="font-medium text-gray-900 dark:text-white">
                        {formatOrdinal(combinedRank)}
                      </span> highest out of {totalProvinces}
                    </div>
                    <div className="text-gray-600 dark:text-gray-400">
                      {formatOrdinal(data.combinedPercentile.toFixed(0))} percentile
                    </div>
                  </div>
                </div>

                {/* Category Scores with Bar Chart */}
                <div>
                  <h3 className="text-xl font-semibold mb-6 text-gray-900 dark:text-white">
                    {t('modal.categoryScores')}
                  </h3>

                  <div className="space-y-4">
                    {data.categoryScores.map((item, index) => {
                      const riskLabel = getWRIRiskLabel(item.score)
                      const riskColor = getWRIRiskColor(item.score)
                      const rank = Math.round((100 - item.percentile) / 100 * totalProvinces) || 1
                      
                      return (
                        <motion.div
                          key={item.categoryId}
                          initial={{ opacity: 0, x: -20 }}
                          animate={{ opacity: 1, x: 0 }}
                          transition={{ delay: index * 0.05 }}
                          className="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg"
                        >
                          {/* Category Header */}
                          <div className="flex items-start justify-between mb-2">
                            <div className="flex-1">
                              <h4 className="font-medium text-gray-900 dark:text-white text-sm">
                                {item.categoryName}
                              </h4>
                              <div className="flex items-center gap-2 mt-1">
                                <span
                                  className="px-2 py-0.5 rounded text-[10px] font-semibold text-white"
                                  style={{ backgroundColor: riskColor }}
                                >
                                  {riskLabel}
                                </span>
                                <span className="text-[10px] text-gray-500 dark:text-gray-400">
                                  {formatOrdinal(rank)} / {totalProvinces}
                                </span>
                              </div>
                            </div>
                            <div className="text-right">
                              <span className="text-xl font-bold text-gray-900 dark:text-white">
                                {item.score.toFixed(2)}
                              </span>
                              <span className="text-xs text-gray-500 dark:text-gray-400 block">
                                / 5.0
                              </span>
                            </div>
                          </div>

                          {/* Progress Bar */}
                          <div className="flex items-center gap-3 mt-3">
                            <div className="flex-1 bg-gray-200 dark:bg-gray-700 rounded-full h-2 overflow-hidden">
                              <motion.div
                                initial={{ width: 0 }}
                                animate={{ width: `${(item.score / 5.0) * 100}%` }}
                                transition={{ delay: index * 0.05 + 0.2, duration: 0.6 }}
                                className="h-full rounded-full"
                                style={{ backgroundColor: riskColor }}
                              />
                            </div>
                            <span className="text-xs text-gray-600 dark:text-gray-400 w-10 text-right">
                              {((item.score / 5.0) * 100).toFixed(0)}%
                            </span>
                          </div>
                        </motion.div>
                      )
                    })}
                  </div>
                </div>

                {/* Data Info */}
                <div className="border-t border-gray-200 dark:border-gray-700 pt-4">
                  <p className="text-xs text-gray-500 dark:text-gray-400 italic">
                    Risk scores based on WRI Aqueduct 4.0 methodology (0-5 scale). Province values are area-weighted averages of sub-basin data.
                  </p>
                </div>
              </div>

              {/* Footer */}
              <div className="bg-gray-50 dark:bg-gray-800 px-6 md:px-8 py-4 border-t border-gray-200 dark:border-gray-700">
                <button
                  onClick={onClose}
                  className="w-full bg-accent hover:bg-accent-dark text-white py-2 md:py-3 rounded-lg font-medium transition-colors"
                >
                  {t('common.close')}
                </button>
              </div>
            </div>
          </motion.div>
        </>
      )}
    </AnimatePresence>
  )
}
